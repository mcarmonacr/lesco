<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lesco.diccionario.model">
    <class name="Category" table="Category">
    
        <id name="categoryId" type="java.lang.Integer" column="Category_ID">
            <generator class="native"/>
        </id>
        
        <property name="categoryName" column="CategoryName" />
        
<!--         <one-to-one name="profileDetail" class="ProfileDetail" -->
<!-- 			cascade="save-update"></one-to-one> -->

		<set name="words" table="WordCategory" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="Category_ID" not-null="true" />
            </key>
            <many-to-many entity-name="com.lesco.diccionario.model.Word">
                <column name="Word_ID" not-null="true" />
            </many-to-many>
        </set>
        
    </class> 
</hibernate-mapping>